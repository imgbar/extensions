{
  "manifest_version": 3,
  "name": "Imgbar",
  "version": "0.0.1",
  "description": "Edit images quickly",
  "icons": {
    "16": "icons/icon_16.png",
    "32": "icons/icon_32.png",
    "48": "icons/icon_48.png",
    "128": "icons/icon_128.png"
  },
  "permissions": [
    "contextMenus"
  ],
  "background": {
    "scripts": [
      "src/background.js"
    ]
  },
  "browser_specific_settings": {
    "gecko": {
      "id": "2rlnlpvwa@mozmail.com",
      "strict_min_version": "109.0"
    }
  }
}